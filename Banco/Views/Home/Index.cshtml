@model Banco.Models.cliente
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>BancoMex te da la bienvenida, @ViewBag.Nombre</h2>
</div>
<h2>Datos personales</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom_cliente)
        </dd>

        <dt>
            Apellido paterno
        </dt>

        <dd>
            @Html.DisplayFor(model => model.a_paterno)
        </dd>

        <dt>
            Apellido materno
        </dt>

        <dd>
            @Html.DisplayFor(model => model.a_materno)
        </dd>

        <dt>
            Teléfono
        </dt>

        <dd>
            @Html.DisplayFor(model => model.telefono)
        </dd>

        <dt>
            Fecha de nacimiento
        </dt>

        <dd>
            @ViewBag.fecha
        </dd>

        <dt>
            Número de cuenta
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cuenta.no_cuenta)
        </dd>

        <dt>
            Saldo
        </dt>

        <dd>
            @ViewBag.saldo
        </dd>

    </dl>
</div>
<link href="~/CSS/StyleSheet.css" rel="stylesheet" />