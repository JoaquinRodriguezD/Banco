
@model Banco.Models.cliente

@{
    ViewBag.Title = "Crear cuenta";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2>@ViewBag.Title</h2>
<h4>Ingresa tus datos</h4>
<div id="divRight">
    @using (Html.BeginForm("CreateCliente", "Access", FormMethod.Post))
    {
        <br />
        <span>Nombre:</span> <p></p>
        <input type="text" name="nom_cliente" maxlength="35" required /><p></p>
        <span>Apellido Paterno:</span> <p></p>
        <input type="text" name="a_paterno" maxlength="35" required /><p></p>
        <span>Apellido Materno:</span> <p></p>
        <input type="text" name="a_materno" maxlength="35" required /><p></p>
        <span>Teléfono:</span> <p></p>
        <input type="text" name="telefono" onkeypress="return isNumberKey(event, this)" maxlength="12" required /><p></p>
        <span>Fecha de nacimiento:</span> <p></p>
        <input type="date" name="fecha_nacimiento" min="1903-01-01" max="2003-12-31" required /><p></p>
        <span>Nip:</span><p></p>
        <input type="password" id="nip" name="nip" onkeypress="return isNumberKey(event, this)" maxlength="4" required />
        <span style="margin-left:140px; position:absolute; bottom:13.5%; left:14.5%" id="pass-status" class="fa fa-eye" aria-hidden="true" onClick="viewPassword()"></span>
        <h6>*Debe contener 4 digitos</h6><p></p>
        <!--
        <span>Confirmar Nip:</span><p></p>
        <input type="password" id="nip_confirmar" onkeypress="return isNumberKey(event, this)" maxlength="4" size="4" required />
        <i id="pass-status2" class="fa fa-eye" aria-hidden="true" onClick="viewPassword2()"></i><p></p>
        -->
        <input type="submit" value="Confirmar" />
        <br />
    }
</div>


<div>
    @Html.ActionLink("Regresar", "Index", "Access")
</div>
<script src="~/Js/Validations.js"></script>
<link href="~/CSS/StyleSheet.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />